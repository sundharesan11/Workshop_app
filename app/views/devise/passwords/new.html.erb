<div class="card my-5 col-md-6 mx-auto bg-warning">
  <div class="card-body ">
    <h4 class="card-title fs-2 text-center my-4 fw-bolder font-italic">Forgot Your Password?</h4>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mb-3">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus:false, autocomplete: "email", class:"form-control", placeholder: "Your Email..." %>
    </div>


    <div class="mb-3 text-center">
      <%= f.submit "Send me reset password instructions", class: " btn btn-light" %>
    </div>
  <% end %>

<div class="mb-3 mt-4 fs-4 text-center text-light bg-dark">
  <%= render "devise/shared/links" %>
</div>

  </div>
</div>